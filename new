            tag: "éšæ—¶ç»ƒä¹ ",
            title: "æ§åˆ¶ä¸ä¸“æ³¨",
            main_text: "æ™®æ‹‰æä¸ä»…ä»…æ˜¯åŠ¨ä½œï¼Œæ›´æ˜¯å¯¹èº«ä½“çš„æ§åˆ¶å­¦ï¼ˆContrologyï¼‰ã€‚æ— è®ºæ­¤åˆ»ä½ åœ¨åšä»€ä¹ˆï¼Œè¯•ç€è°ƒæ•´åå§¿ï¼Œå¯»æ‰¾åéª¨å‚ç›´å‘ä¸‹çš„æ„Ÿè§‰ã€‚",
            tip: "æ²‰è‚©ï¼Œå è‚˜ï¼Œé¡¶å¤´æ‚¬ã€‚"
        };

        let content = pilatesData.find(p => p.hour === currentHour);
        if (!content) content = defaultContent;
        
        document.getElementById('clock').innerText = `${currentHour}:00`;
        document.getElementById('tag').innerText = content.tag;
        document.getElementById('title').innerText = content.title;
        document.getElementById('main-text').innerText = content.main_text;
        document.getElementById('tip-text').innerText = content.tip;
    }

